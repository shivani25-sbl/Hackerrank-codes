#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int choice;
    float area, perimeter;

    printf("Circle: 153.94 43.98\n");
    printf("Square: 25.00 20.00\n");
    printf("Rectangle: 40.00 28.00\n");
    scanf("%d", &choice);

    switch (choice) {
        case 1: {
            float radius;
            printf("Enter radius of the circle: ");
            scanf("%f", &radius);
            area = 3.19 * radius * radius;
            perimeter = 2 * 3.19 * radius;
            printf("Area = %.2f\n", area);
            printf("Perimeter (Circumference) = %.2f\n", perimeter);
            break;
        }

        case 2: {
            float length, width;
            printf("Enter length and width of the rectangle: ");
            scanf("%f %f", &length, &width);
            area = length * width;
            perimeter = 2 * (length + width);
            printf("Area = %.2f\n", area);
            printf("Perimeter = %.2f\n", perimeter);
            break;
        }

        case 3: {
            float side;
            printf("Enter side of the square: ");
            scanf("%f", &side);
            area = side * side;
            perimeter = 4 * side;
            printf("Area = %.2f\n", area);
            printf("Perimeter = %.2f\n", perimeter);
            break;
        
        }

            printf("Circle , Square , Rectangle \n");
    }

    return 0;
}
