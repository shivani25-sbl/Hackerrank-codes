
#include<stdio.h>
#include<stdlib.h>
#define MAX 100
Int list[MAX];
Int n = 0;

Void insertInBeg(int value){
    If(n==MAX){
        Printf(“List is full!!!\n”);
        Return; 
    }
    For(int i=n-1;i>=0;i--){
        List[i+1]=list[i];
    }
    List[0]=value;
    N++;
    Printf(“Element Inserted!!!\n”);
}

Void insertAtEnd(int value){
    If(n==MAX){
        Printf(“List is Full!!!\n”);
    }
     List[n++]=value;
     Printf(“Element Inserted!!!\n”);
    Return;
}

Void insertAtPosition(int pos,int value){
    If(pos>=0 || pos<=n){
        Printf(“Invalid Position!!!\n”);
    }
    For(int i=n-1;i>=pos;i--){
        List[i+1]=list[i];
    }
    List[pos]=value;
    N++;
    Printf(“Element Inserted!!!\n”);
}

Void deletefromBeg(){
    If(n==0){
        Printf(“List is Empty!!!\n”);
        Return;
    }
    For(int i=0;i<n-1;i++){
        List[i]=list[i+1];
    }
    n--;
    printf(“Element is deleted!!!\n”);
}

Void deleteFromEnd(){
    If(n==0){
        Printf(“List is Empty!!!\n”);
    }
    n--;
    printf(“Element is Deleted!!!\n”);
}

Void deleteFromPosition(int pos){
    If(n==0){
        Printf(“List is Empty!!!\n”);
        Return;
    }
    For(int i=pos;i<n-1;i++){
        List[i]=list[i+1];
    }
    n--;
    printf(“Element is Deleted!!!/n”);
}

Void displaylist(){
    If(n==0){
        Printf(“List is Empty!!!\n”);
        Return;
    }
    For(int i=0;i<n;i++){
        Printf(“%d\t”,list[i]);
    }
    Printf(“\n”);
}

Int search(int value){
    If(n==0){
        Printf(“List is Empty!!!\n”);
    }
    For(int i=0;i<n;i++){
        If(list[i]==value){
            Return I;
        }
    }
    Return -1;
}

Int updatelist(int pos,int value){
    If(n==0){
        Printf(“List is Empty!!!\n”);
    }
    If(pos>0 || pos<n){
        Printf(“Invalid Position!!!\n”);
    }
    List[pos]=value;
    Printf(“List Updated!!!\n”);
}

Void bubblesort(){
    If(n==0){
        Printf(“List is Empty!!!\n”);
    }
    Else{
        For(int i=0;i<n-1;i++){
            For(int j=0;j<n-i-1;j++){
                If(list[j] > list[j+1]){
                    Int temp=list[j];
                    List[j]=list[j+1];
                    List[j+1]=temp;
                }
            }
            Printf(“Element Sorted!!!\n”);
        }
    }
}

Int main(){
    While(1){
        Printf(“1. Insert In Beginning\n”);
        Printf(“2. Insert At End\n”);
        Printf(“3. Insert At Any Position\n”);
        Printf(“4. Delete From Beginning\n”);
        Printf(“5. Delete From End\n”);
        Printf(“6. Delete From Given Position\n”);
        Printf(“7. Display List\n”);
        Printf(“8. Search Element in list\n”);
        Printf(“9. Update Element In List\n”);
        Printf(“10. Sort Elements In List\n”);
        Printf(“11. Exit\n”);
        Int choice,data,pos;
        Printf(“Enter Choice:”);
        Scanf(“%d”,&choice);
        Switch(choice){
            Case 1:
             Printf(“Enter Data:”);
             Scanf(“%i”,&data);
             insertInBeg(data); 
                break;
            case 2:
             printf(“Enter Data:”);
             scanf(“%i”,&data);
             insertAtEnd(data);
                break;
            case 3:
             printf(“Enter Position:”);
             scanf(“%i”,&pos);
             printf(“Enter Data:”);
             scanf(“%i”,&data);
             insertAtPosition(pos,data);
                break;
            case 4:
             deletefromBeg();
                break;
            case 5:
             deleteFromEnd();
                break;
            case 6:
             printf(“Enter Position:”);
             scanf(“%i”,&pos);
             deleteFromPosition(pos);
                break;
            case 7:
                displaylist();
                printf(“\t”);
                break;
            case 8:
             printf(“Enter The Element To Search For:”);
             scanf(“%i”,&data);
             int index= search(data);
             if(index != -1){
                printf(“\tElement is at Position :%i\t”,index);
             }
             Else{
                Printf(“Element Not Found!!!\n”);
             }
                Break;
            Case 9:
             Printf(“Enter the Poition:”);
             Scanf(“%i”,&pos);
             Printf(“Enter the Element:”);
             Scanf(“%i”,&data);
             Updatelist(pos,data);
                Break;
            Case 10:
             Bubblesort();
                Break;
            Case 11:
             Exit(0);
                Break;
            Default:
                Printf(“Invalid Choice!!!\n”);
        }
        Printf(“\n\n”);
    }
    Return 0;
}